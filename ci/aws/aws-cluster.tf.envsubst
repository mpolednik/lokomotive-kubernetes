module "aws-tempest" {
  source = "../../aws/flatcar-linux/kubernetes"

  providers = {
    aws = "aws.default"
    local = "local.default"
    null = "null.default"
    template = "template.default"
    tls = "tls.default"
  }

  cluster_name = "$CLUSTER_ID"
  dns_zone = "$AWS_DNS_ZONE"
  dns_zone_id = "$AWS_DNS_ZONE_ID"
  ssh_keys = ["$PUB_KEY"]

  asset_dir = "${pathexpand("~/assets")}"

  worker_count = 2
  worker_type  = "t3.small"
}
